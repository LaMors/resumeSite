@model IQueryable<Skill>
@{
    string strTitle = "Панель администратора";
    ViewBag.Title = strTitle;
}


<div class="div-box">
    <h2>@strTitle</h2>
    <div>
        <h3>Мои умения</h3>

        @if (Model.Any())
        {
            <div>
                @foreach (Skill entity in Model)
                {
                    <div>

                        <a asp-area="" asp-controller="Skills" asp-action="Edit" asp-route-id="@entity.Id">
                            @($"{entity.Title}")
                        </a>

                        <a asp-area="Admin" asp-controller="Skills" asp-action="Edit" asp-route-id="@entity.Id">редактировать</a>
                        |
                        <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="Skills" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@entity.Id">
                            <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">удалить</a>
                        </form>
                        |

                    </div>
                }
            </div>
        }
    </div>
    <div>
        <h3>Редактировать страницы сайта</h3>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageIndex">Главная</a>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageSkills">Мои умения</a>
        <a asp-area="Admin" asp-controller="Skills" asp-action="Edit" asp-route-id="">Добавить умение</a>
        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageIndex">Контакты</a>
    </div>
    <div>
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Выйти" />
        </form>
    </div>
</div>



